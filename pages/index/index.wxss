/**index.wxss**/
.outputPanel {
  position: absolute;
  width: 100%;
  height: 100%;
}

.outputArea {
  position: absolute;
  overflow-y: auto;
  top: 0rpx;
  font-size: 30rpx;
  display: block;
}

.outputArea view {
  padding: 10rpx;
}

.inputPanel {
  position: absolute;
  bottom: 0rpx;
  width: 100%;
}

.inputArea {
  display: inline-block;
}
.inputArea input {
  width: 600rpx;
  margin-left: 10rpx;
  border: 1rpx;
  
}
.btn {
  display: inline-block;
  right: 0rpx;
  background-color: green;
}
.btn button {
  height: 80rpx;
  width: 140rpx;
  text-align: center;
  font-size: 30rpx;
  border-color: red;
  border-radius: 1px;
}

.robot-chat {
  /* float: left; */
   word-wrap: break-word;
  word-break: normal;
  max-width: 100%; 
  display: flex;
  flex-direction: column;
  cursor: pointer;
  background-color: #fff;
}

.user-chat {
  word-wrap: break-word;
